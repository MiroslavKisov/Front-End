{{> header}}
<h1 class="text-white text-center text-margin">Register</h1>
  <div class="form-container">
      <form data-toggle="validator" role="form" action={{registerRoute}} method="POST">
        <fieldset>
          <div class="form-group">
            <label class="text-white" for="exampleInputEmail1">Username</label>
            <input type="text" name="username" minlength="3" maxlength="25" class="form-control" id="username" aria-describedby="emailHelp" placeholder="Username" data-error="Username must be between 3 and 25 charecters long!" required>
            <div class="help-block with-errors text-white">Between 3 and 25 characters long</div>
          </div>
          <div class="form-group">
            <label class="text-white" for="exampleInputPassword1">Password</label>
            <input id="password" type="password" minlength="6" name="password" class="form-control" placeholder="Password" data-error="Password length must be more than 3 character long" required>
            <div class="help-block with-errors text-white">Minimum 6 characters long.</div>
          </div>
          <div class="form-group">
            <label class="text-white" for="exampleInputPassword1">Repeat Password</label>
            <input type="password" name="repeatPassword" data-match="#password" class="form-control" id="exampleInputPassword1" placeholder="Repeat Password" data-match-error="Whoops, these don't match" required>
          </div>
          <div class="form-group">
            <label for="exampleTextarea" class="text-white">About You</label>
            <textarea class="form-control" maxlength="3000" id="exampleTextarea" rows="3" name="aboutYou" placeholder="About you..."></textarea>
            <div class="help-block with-errors text-white">Tell us about yourself.</div>
          </div>
          <div class="button-container">
              <button type="submit" class="btn btn-primary">Register</button>
          </div>
        </fieldset>
      </form>
  </div>
{{> footer}}