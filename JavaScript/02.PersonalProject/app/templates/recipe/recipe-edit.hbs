{{> header}}
<h1 class="text-white text-center text-margin">Edit Recipe</h1>
<div class="form-container">
    <form id="editRecipeForm" method="POST" action="#/recipe-edit/:{{_id}}">
      <fieldset>
        <div class="form-group">
            <label class="text-white" for="exampleInputEmail1">Recipe Name</label>
            <input value="{{name}}" minlength="3" maxlength="25" type="text" name="recipeName" class="form-control" aria-describedby="emailHelp" placeholder="Recipe name" required>
            <div class="help-block with-errors text-white">Between 3 and 25 characters long</div>
        </div>
        <div class="form-group">
          <label for="exampleTextarea" class="text-white">Recipe Instructions</label>
          <textarea class="form-control" maxlength="3000" id="exampleTextarea" rows="3" name="recipeText" placeholder="Recipe..." required>{{text}}</textarea>
        </div>
        <div class="button-container">
            <button type="submit" class="btn btn-primary">Edit</button>
        </div>
      </fieldset>
    </form>
</div>
{{> footer}}